<header class="header">
  <div class="container">
    <div class="header-wrapper">
      <div class="logo">
        <a href="/">
          <img src="/img/logo.svg" alt="Akira URL">
          <span>Akira URL</span>
        </a>
      </div>
      
      <nav class="nav">
        <ul class="nav-menu">
          <li><a href="/#features"><i class="fas fa-star"></i> Özellikler</a></li>
          <li><a href="/#how-it-works"><i class="fas fa-info-circle"></i> Nasıl Çalışır</a></li>
          <li><a href="/pricing"><i class="fas fa-tags"></i> Fiyatlandırma</a></li>
        </ul>
      </nav>
      
      <div class="auth-buttons">
        <% if (typeof user !== 'undefined' && user) { %>
          <div class="user-menu">
            <button class="btn btn-user">
              <i class="fas fa-user-circle"></i>
              <span><%= user.username %></span>
              <i class="fas fa-chevron-down"></i>
            </button>
            <div class="dropdown-menu">
              <a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
              <a href="/account"><i class="fas fa-user-cog"></i> Hesabım</a>
              <a href="#" id="logout-btn"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
            </div>
          </div>
        <% } else { %>
          <a href="/login" class="btn btn-outline"><i class="fas fa-sign-in-alt"></i> Giriş Yap</a>
          <a href="/register" class="btn btn-primary"><i class="fas fa-user-plus"></i> Kayıt Ol</a>
        <% } %>
        
        <button class="mobile-menu-btn">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
  </div>
  
  <div class="mobile-menu">
    <ul>
      <li><a href="/#features"><i class="fas fa-star"></i> Özellikler</a></li>
      <li><a href="/#how-it-works"><i class="fas fa-info-circle"></i> Nasıl Çalışır</a></li>
      <li><a href="/pricing"><i class="fas fa-tags"></i> Fiyatlandırma</a></li>
      
      <% if (typeof user !== 'undefined' && user) { %>
        <li><a href="/dashboard"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href="/account"><i class="fas fa-user-cog"></i> Hesabım</a></li>
        <li><a href="#" id="mobile-logout-btn"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a></li>
      <% } else { %>
        <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Giriş Yap</a></li>
        <li><a href="/register"><i class="fas fa-user-plus"></i> Kayıt Ol</a></li>
      <% } %>
    </ul>
  </div>
</header>